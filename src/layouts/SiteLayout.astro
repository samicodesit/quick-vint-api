---
export let title =
  "AutoLister AI - The #1 Vinted Description Generator & Lister";
export let description =
  "The best AI Vinted lister that generates descriptions from photos.";
export let canonical: string | URL | null | undefined;
export let ogUrl = "https://autolister.app/";
export let ogImage = "https://autolister.app/banner.png";
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    {canonical && <link rel="canonical" href={canonical} />}

    <title>{title}</title>
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={ogUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={ogUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-F2QL50WB6M"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];

      function gtag(...args: any[]) {
        window.dataLayer.push(args);
      }

      gtag("js", new Date());
      gtag("config", "G-F2QL50WB6M");
    </script>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "AutoLister AI",
        "alternateName": "AutoLister",
        "url": "https://autolister.app/"
      }
    </script>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "AutoLister AI",
        "applicationCategory": "BrowserExtension",
        "operatingSystem": "Chrome",
        "description": "Generate compelling Vinted listings instantly with AutoLister AI. Create professional titles and descriptions from your photos in seconds to sell faster.",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "USD"
        },
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "4.9",
          "ratingCount": "125"
        },
        "url": "https://chromewebstore.google.com/detail/autolister-ai/mommklhpammnlojjobejddmidmdcalcl"
      }
    </script>
  </head>

  <body
    class="min-h-screen bg-white text-slate-900 overflow-x-hidden antialiased selection:bg-brand-100 selection:text-brand-900"
  >
    <!-- Navbar -->
    <nav
      class="fixed top-0 w-full z-50 glass-nav transition-all duration-300"
      id="navbar"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
          <!-- Logo -->
          <a
            href="/"
            class="flex-shrink-0 flex items-center gap-2 cursor-pointer no-underline"
          >
            <span class="font-bold text-xl tracking-tight text-slate-900"
              >AutoLister <span class="text-brand-600">AI</span></span
            >
          </a>

          <!-- Desktop Menu -->
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-8">
              <a
                href="#features"
                class="text-base font-bold text-slate-700 hover:text-brand-600 transition-colors no-underline"
                >Features</a
              >
              <a
                href="/pricing"
                class="text-base font-bold text-slate-700 hover:text-brand-600 transition-colors no-underline"
                >Pricing</a
              >
              <a
                href="/support"
                class="text-base font-bold text-slate-700 hover:text-brand-600 transition-colors no-underline"
                >Support</a
              >
              <a
                href="mailto:hello@autolister.app"
                class="text-base font-bold text-slate-700 hover:text-brand-600 transition-colors no-underline"
                >Contact</a
              >
            </div>
          </div>

          <!-- CTA -->
          <div class="hidden md:block">
            <a
              href="https://chromewebstore.google.com/detail/autolister-ai/mommklhpammnlojjobejddmidmdcalcl"
              target="_blank"
              class="inline-flex items-center px-6 py-2.5 border border-transparent text-sm font-bold rounded-2xl shadow-lg shadow-brand-600/20 text-white bg-brand-600 hover:bg-brand-700 transition-all hover:scale-105 active:scale-95 no-underline"
            >
              Get Started Free
            </a>
          </div>

          <!-- Mobile menu button -->
          <div class="-mr-2 flex md:hidden">
            <button
              type="button"
              onclick="toggleMobileMenu()"
              class="inline-flex items-center justify-center p-2 rounded-md text-slate-600 hover:text-brand-600 hover:bg-slate-100 focus:outline-none"
            >
              <span class="sr-only">Open main menu</span>
              <svg
                class="h-6 w-6"
                stroke="currentColor"
                fill="none"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile Menu (Hidden by default) -->
      <div
        id="mobile-menu"
        class="hidden md:hidden absolute top-20 left-0 w-full bg-white border-b border-gray-100 shadow-xl transition-all duration-300 origin-top transform"
      >
        <div class="px-4 pt-2 pb-6 space-y-2">
          <a
            href="/"
            class="block px-3 py-3 rounded-lg text-base font-semibold text-slate-600 hover:text-brand-600 hover:bg-brand-50 transition-colors no-underline"
            >Features</a
          >
          <a
            href="/pricing"
            class="block px-3 py-3 rounded-lg text-base font-semibold text-slate-600 hover:text-brand-600 hover:bg-brand-50 transition-colors no-underline"
            >Pricing</a
          >
          <a
            href="mailto:hello@autolister.app"
            class="block px-3 py-3 rounded-lg text-base font-semibold text-slate-600 hover:text-brand-600 hover:bg-brand-50 transition-colors no-underline"
            >Contact</a
          >
          <div class="pt-4 mt-4 border-t border-gray-100">
            <a
              href="https://chromewebstore.google.com/detail/autolister-ai/mommklhpammnlojjobejddmidmdcalcl"
              target="_blank"
              class="block w-full text-center px-6 py-3 border border-transparent text-base font-bold rounded-xl text-white bg-brand-600 hover:bg-brand-700 shadow-lg shadow-brand-600/20 no-underline"
            >
              Get Started Free
            </a>
          </div>
        </div>
      </div>
    </nav>

    <slot />

    <footer class="bg-slate-50 border-t border-slate-200 pt-16 pb-8">
      <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
        <div
          class="flex flex-col md:flex-row justify-between items-center gap-8 mb-8"
        >
          <!-- Logo -->
          <div class="flex items-center gap-2">
            <span class="font-bold text-lg text-slate-900"
              >AutoLister <span class="text-brand-600">AI</span></span
            >
          </div>

          <div class="flex flex-wrap justify-center gap-8">
            <a
              href="/pricing"
              class="text-sm font-semibold text-slate-600 hover:text-brand-600 transition-colors"
              >Pricing</a
            >
            <a
              href="/privacy"
              class="text-sm font-semibold text-slate-600 hover:text-brand-600 transition-colors"
              >Privacy Policy</a
            >
            <a
              href="/terms"
              class="text-sm font-semibold text-slate-600 hover:text-brand-600 transition-colors"
              >Terms of Service</a
            >
            <a
              href="/support"
              class="text-sm font-semibold text-slate-600 hover:text-brand-600 transition-colors"
              >Support</a
            >
          </div>
        </div>
        <div class="border-t border-slate-200 pt-8 text-center">
          <p class="text-sm text-slate-500">
            &copy; 2026 AutoLister AI. All rights reserved.
          </p>
        </div>
      </div>
    </footer>

    <script>
      const mobileMenu = document.getElementById("mobile-menu");

      window.toggleMobileMenu = function toggleMobileMenu() {
        if (!mobileMenu) return;

        if (mobileMenu.classList.contains("hidden")) {
          mobileMenu.classList.remove("hidden");
        } else {
          mobileMenu.classList.add("hidden");
        }
      };

      // Close mobile menu when clicking links
      document.querySelectorAll("#mobile-menu a").forEach((el) => {
        el.addEventListener("click", () => {
          if (!mobileMenu) return;

          mobileMenu.classList.add("hidden");
        });
      });

      // Sticky Navbar Effect
      window.addEventListener("scroll", () => {
        const nav = document.getElementById("navbar");
        if (!nav) return;

        if (window.scrollY > 20) {
          nav.classList.add("shadow-lg");
          nav.style.background = "rgba(255, 255, 255, 0.95)";
        } else {
          nav.classList.remove("shadow-lg");
          nav.style.background = "rgba(255, 255, 255, 0.9)";
        }
      });
    </script>
  </body>
</html>
